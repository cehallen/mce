<div class="row">
  <div class="small-4 large-4 columns show">
    <div class="word_list">
      <h3><%= @movie.title %> </h3>

      <h5>Words (and # of occurrences)</h5>

      <% @movie.word_counts.each do |word_info| %> 
        <% word = word_info[0] %>
        <% frequency = word_info[1] %>
        <% word_object = word_info[2] %>

        <li><%= link_to word, movie_word_path(@movie, word_object.first), class: 'word_link' %> - 
          <%= frequency %></li>
      <% end %>
    </div>
  </div>

  <div class="small-8 large-8 columns">
    <div class="word_context">

    </div>
  </div>
</div>
